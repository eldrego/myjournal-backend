{
  "name": "trial",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nyc": {
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "text"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run prod",
    "build": "babel -d ./build ./server -s",
    "compile": "npm run clean:test && babel -d tests/ test/ && npm run prod:client",
    "test": "NODE_ENV=test _mocha --require @babel/register --exit",
    "dev": "cross-env NODE_ENV=dev nodemon index.js --exec babel-node",
    "prod": "cross-env NODE_ENV=prod node ./build/index.js",
    "coverage": "nyc npm run test",
    "open-cov": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "rootDir": "client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.15.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.7.0",
    "npm": "^6.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "chai": "^3.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "isparta": "^4.1.1",
    "istanbul": "^0.4.5",
    "jest": "^23.3.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-prepare": "^0.1.0",
    "nyc": "^14.1.0",
    "sinon": "^6.1.4",
    "supertest": "^3.1.0"
  }
}
